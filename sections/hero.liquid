<section class="hero-banner">
  {% if section.settings.background_image %}
    <div
      class="hero-bg"
      style="background-image:url({{ section.settings.background_image | image_url }});"
    ></div>
  {% endif %}
  <div class="hero-content">
    <h1>
      {{ section.settings.hero_heading }}
    </h1>
    <h2>
      {{ section.settings.hero_subheading }}
    </h2>
    <p>
      {{ section.settings.hero_description }}
    </p>
    {% if section.settings.hero_button_text and section.settings.hero_button_link %}
      <a
        href="{{ section.settings.hero_button_link }}"
        class="hero-btn"
        title="{{ section.settings.hero_button_text }}"
      >
        {{ section.settings.hero_button_text }}
      </a>
    {% endif %}
  </div>
</section>

<style>
  .hero-banner {
    width: 100%;
    min-height: 500px;
    position: relative;
    background: #222;
    overflow: hidden;
  }
  .hero-banner .hero-bg {
    background-size: cover;
    background-position: center;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    filter: brightness(0.6);
  }
  .hero-banner .hero-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 500px;
    padding: 40px 20px;
    text-align: center;
    color: #fff;
  }
  .hero-banner .hero-content * {
    color: #fff;
  }
  .hero-banner .hero-content h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: white;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }
  .hero-banner .hero-content h2 {
    font-size: 1.5rem;
    font-weight: 400;
    margin-bottom: 1rem;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }
  .hero-banner .hero-content p {
    font-size: 1.1rem;
    max-width: 600px;
    margin-bottom: 2rem;
    text-shadow: 0 1px 6px rgba(0, 0, 0, 0.15);
  }
  .hero-banner .hero-btn {
    display: inline-block;
    padding: 0.75em 2em;
    background: #ff6f61;
    color: #fff;
    font-size: 1.1rem;
    font-weight: 600;
    border-radius: 30px;
    text-decoration: none;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    transition: background 0.2s;
  }
  .hero-banner .hero-btn:hover {
    background: #e55d50;
  }
  @media (max-width: 600px) {
    .hero-banner .hero-content h1 {
      font-size: 2rem;
    }
    .hero-banner .hero-content h2 {
      font-size: 1.1rem;
    }
    .hero-banner .hero-content {
      min-height: 300px;
      padding: 20px 10px;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "hero_heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "hero_subheading",
      "label": "Subheading",
      "default": "Discover our latest collection"
    },
    {
      "type": "textarea",
      "id": "hero_description",
      "label": "Description",
      "default": "Shop the best products curated just for you."
    },
    {
      "type": "text",
      "id": "hero_button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "hero_button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "General"
    }
  ]
}
{% endschema %}
