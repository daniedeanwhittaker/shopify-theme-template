<section class="hero-banner">
  {% if section.settings.background_image %}
    <div class="hero-bg" style="background-image:url({{ section.settings.background_image | image_url }});">
  {% endif %}

  <div class="container-flex justify-content-{{ section.settings.content_position }}">
    <div
      class="hero-content"
      style="max-width:{{ section.settings.text_container_width }}; align-items:{{ section.settings.alignment }};background-color:{{ section.settings.content_background_color }};"
    >
      <h1>{{ section.settings.hero_heading }}</h1>
      <h2>{{ section.settings.hero_subheading }}</h2>
      <p>{{ section.settings.hero_description }}</p>

      {% if section.settings.hero_button_text or section.settings.hero_button_link %}
        <a
          href="{{ section.settings.hero_button_link }}"
          class="btn btn-primary btn-{{ section.settings.button_size }}"
          title="{{ section.settings.hero_button_text }}"
        >
          {{ section.settings.hero_button_text }}
        </a>
      {% endif %}
    </div>
  </div>

  {% if section.settings.background_image %}
    </div>
  {% endif %}
</section>

<style>
  .hero-banner {
    width: 100%;
    min-height: 500px;
    position: relative;
    background: #222;
    overflow: hidden;
  }
  .hero-banner .hero-bg {
    background-size: cover;
    background-position: center;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    filter: brightness(0.6);
  }
  .hero-banner .hero-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 500px;
    padding: 40px 20px;
    color: #fff;
  }
  .hero-banner .hero-content-center {
    justify-content: flex-end;
  }
  .hero-banner .hero-content-left {
    justify-content: start;
  }
  .hero-banner .hero-content-right {
    justify-content: flex-end;
  }
  .hero-banner .hero-content * {
    color: #fff;
  }
  .hero-banner .hero-content h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: white;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }
  .hero-banner .hero-content h2 {
    font-size: 1.5rem;
    font-weight: 400;
    margin-bottom: 1rem;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }
  .hero-banner .hero-content p {
    font-size: 1.1rem;
    max-width: 600px;
    margin-bottom: 2rem;
    text-shadow: 0 1px 6px rgba(0, 0, 0, 0.15);
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "Content Position",
      "options": [
        { "value": "start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "end", "label": "Right" }
      ],
      "default": "start"
    },
    {
      "type": "text",
      "id": "hero_heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Text alignment",
      "options": [
        { "value": "flex-start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Right" }
      ],
      "default": "flex-start"
    },
    {
      "type": "text",
      "id": "hero_subheading",
      "label": "Subheading",
      "default": "Discover our latest collection"
    },
    {
      "type": "textarea",
      "id": "hero_description",
      "label": "Description",
      "default": "Shop the best products curated just for you."
    },
    {
      "type": "range",
      "id": "text_container_width",
      "label": "Text Container Width",
      "min": 500,
      "max": 2000,
      "step": 50,
      "unit": "px",
      "default": 600
    },
    {
      "type": "color",
      "id": "content_background_color",
      "label": "Text content background color",
      "default": "transparent"
    },
    {
      "type": "text",
      "id": "hero_button_text",
      "label": "Button Text",
      "default": "Shop All"
    },
    {
      "type": "url",
      "id": "hero_button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "select",
      "id": "button_size",
      "label": "Button Size",
      "options": [
        { "value": "sm", "label": "Small" },
        { "value": "md", "label": "Medium" },
        { "value": "lg", "label": "Large" },
        { "value": "xl", "label": "Extra Large" }
      ],
      "default": "lg"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "General"
    }
  ]
}
{% endschema %}
