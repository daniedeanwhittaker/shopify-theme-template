<div
  class="announcement-bar"
  style="
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
    padding: 12px 0;
    text-align: center;
    height: {{ section.settings.bar_height }}px;
    margin-bottom: {{ section.settings.magin_bottom }}px;
  "
>
  <div class="container">
    {{ section.settings.announcement_text }}
  </div>
</div>

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement Text",
      "default": "Welcome to our store!"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ddd"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#043a43"
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text Size (px)",
      "min": 12,
      "max": 36,
      "step": 2,
      "default": 18
    },
    {
      "type": "range",
      "id": "bar_height",
      "label": "Bar Height (px)",
      "min": 24,
      "max": 120,
      "step": 1,
      "default": 48
    },
    {
      "type": "range",
      "id": "magin_bottom",
      "label": "Margin Bottom (px)",
      "min": 0,
      "max": 50,
      "step": 5,
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "category": "Header"
    }
  ]
}
{% endschema %}
